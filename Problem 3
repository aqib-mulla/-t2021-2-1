//Problem-3: With a single integer as the input, generate the following until a = x [series of numbers as shown in below examples]

#include <iostream>

using namespace std;

int main()
{
    int i, j, rows;
   cout <<"Enter the number of columns";
   cin >>rows ;
   for (i = 1; i <= rows; ++i) {
           if(i%2!=0)
           {
              for (j = 1; j <= i; ++j) {
              cout<<j;
            }
           }
            if(i%2==0)
            {
              for (j = i; j >= 1; --j) {
              cout<<j;
            }
            }
       
     cout << "\n";
   }   for (i = rows-1; i >= 1; --i) {
           if(i%2!=0)
           {
              for (j = 1; j <= i; ++j) {
              cout<<j;
            }
           }
            if(i%2==0)
            {
              for (j = i; j >= 1; --j) {
              cout<<j;
            }
            }
       
       cout << "\n";
   }

    return 0;
}
