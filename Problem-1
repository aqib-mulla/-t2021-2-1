// progem: Create a small calculator which performs operations such as Addition, Subtraction, Multiplication and Division using class.

#include <iostream>
#include <string>
using namespace std;



// Main program
main ()
{

  char op;

  double a, b;

  // It allows user to enter operator i.e. +, -, *, /
  cout << "select type of operation: " << endl;

  cin >> op;

  // It allow user to enter the operands
  cout << "Enter First Number: " << endl;

  cin >> a;

  cout << "Enter Second Number: " << endl;

  cin >> b;


  // Switch statement begins
  switch (op)

    {


      // If user enter +
    case '+':


      cout << "The sum of 2 number is:" << a + b << endl;
      break;



      // If user enter -
    case '-':


      cout << "The sub of 2 number is:" << a - b;
      break;

      // If user enter *
    case '*':

      cout << "The multiplication of 2 number is:" << a * b;
      break;

      // If user enter /
    case '/':

      cout << "The division of 2 number is:" << a / b;
      break;



      // If the operator is other than +, -, * or /,
      // error message will display
    default:


      cout << "Error! operator is not correct";
      break;


    }				// switch statement ends

  return 0;


